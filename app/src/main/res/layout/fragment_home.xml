<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BerandaFragment"
    android:orientation="vertical"
    android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/roboto_normal"
                android:textColor="@color/black"
                android:text="Beranda"
                android:id="@+id/apptitle"
                android:textSize="26sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="110dp"
            android:padding="16dp">
            <TextView
                android:id="@+id/tanggal_sekarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:fontFamily="@font/roboto_normal"
                android:text="Sabtu, 6 Februari"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginRight="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_grey"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kalori"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_normal"
                            android:textSize="14dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/txt_calories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_normal"
                                android:textSize="14dp"/>
                            <TextView
                                android:id="@+id/txt_target_kalori"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/300 Kcal"
                                android:textColor="@color/gray"
                                android:fontFamily="@font/roboto_normal"
                                android:textSize="14dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ProgressBar
                        android:layout_marginTop="5dp"
                        android:id="@+id/prog_kalori"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:max="1"
                        android:progress="0"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Olahraga"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_normal"
                            android:textSize="14dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/txt_olahraga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_normal"
                                android:textSize="14dp"/>
                            <TextView
                                android:id="@+id/txt_target_olahraga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/30 Menit"
                                android:textColor="@color/gray"
                                android:fontFamily="@font/roboto_normal"
                                android:textSize="14dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ProgressBar
                        android:layout_marginTop="5dp"
                        android:id="@+id/prog_olahraga"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:max="1"
                        android:progress="0"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Begerak"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_normal"
                            android:textSize="14dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/txt_gerak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_normal"
                                android:textSize="14dp"/>
                            <TextView
                                android:id="@+id/txt_target_gerak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/12 Jam"
                                android:textColor="@color/gray"
                                android:fontFamily="@font/roboto_normal"
                                android:textSize="14dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ProgressBar
                        android:layout_marginTop="5dp"
                        android:id="@+id/prog_gerak"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:max="1"
                        android:progress="0"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tidur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_grey"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:padding="20dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="14dp"
                    android:fontFamily="@font/roboto_normal"
                    android:textColor="@color/black"
                    android:text="Tidur"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/total_tidur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:fontFamily="@font/roboto_normal"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/waktu_tidur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00 - 00:00 "
                        android:fontFamily="@font/roboto_normal"
                        android:textColor="@color/gray"
                        android:textSize="12dp"/>
                </LinearLayout>

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aktivitas"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_normal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lihat semua"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="right"
                        android:id="@+id/riwayat_activitas"
                        />
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="15dp"
                    android:id="@+id/workouts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/aktivitas_kosong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tidak adak aktivitas hari ini!"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/roboto_normal"
                    android:gravity="center"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tips"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_normal"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tips"
                    android:layout_marginTop="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>