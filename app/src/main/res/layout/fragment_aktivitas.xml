<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AktivitasFragment"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/roboto_normal"
                android:textColor="@color/black"
                android:text="Aktivitas"
                android:id="@+id/apptitle"
                android:textSize="26sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="110dp"
            android:padding="16dp">
            <TextView
                android:id="@+id/tanggal_sekarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:fontFamily="@font/roboto_normal"
                android:text="Sabtu, 6 Februari"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginRight="5dp"
                />
            <RelativeLayout
                android:id="@+id/rl_kalori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/card_grey"
                android:layout_marginTop="14dp">

                <ProgressBar
                    android:layout_marginTop="5dp"
                    android:id="@+id/prog_kalori"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar2"
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:max="100"
                    android:progress="0"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prog_kalori"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_marginLeft="18dp"
                    android:gravity="left">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kalori"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_normal"
                        android:textSize="14dp"
                        android:layout_marginRight="4dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_calories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_normal"
                            android:textSize="14dp"/>
                        <TextView
                            android:id="@+id/txt_target_kalori"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/ ~"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/roboto_normal"
                            android:textSize="14dp"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_forward"
                    android:scaleType="fitXY"
                    android:layout_gravity="right"
                    app:tint="@color/black"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_olahraga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/card_grey"
                android:layout_marginTop="14dp">

                <ProgressBar
                    android:layout_marginTop="5dp"
                    android:id="@+id/prog_olahraga"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar2"
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:max="100"
                    android:progress="0"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prog_olahraga"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_marginLeft="18dp"
                    android:gravity="left">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Olahraga"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_normal"
                        android:textSize="14dp"
                        android:layout_marginRight="4dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_olahraga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_normal"
                            android:textSize="14dp"/>
                        <TextView
                            android:id="@+id/txt_target_olahraga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/ ~"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/roboto_normal"
                            android:textSize="14dp"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_forward"
                    android:scaleType="fitXY"
                    android:layout_gravity="right"
                    app:tint="@color/black"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_gerak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/card_grey"
                android:layout_marginTop="14dp">

                <ProgressBar
                    android:layout_marginTop="5dp"
                    android:id="@+id/prog_gerak"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar2"
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:max="100"
                    android:progress="0"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prog_gerak"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_marginLeft="18dp"
                    android:gravity="left">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bergerak"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_normal"
                        android:textSize="14dp"
                        android:layout_marginRight="4dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_gerak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 "
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_normal"
                            android:textSize="14dp"/>
                        <TextView
                            android:id="@+id/txt_target_gerak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/ ~"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/roboto_normal"
                            android:textSize="14dp"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_forward"
                    android:scaleType="fitXY"
                    android:layout_gravity="right"
                    app:tint="@color/black"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_tidur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/card_grey"
                android:layout_marginTop="14dp">

                <ProgressBar
                    android:layout_marginTop="5dp"
                    android:id="@+id/prog_tidur"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar2"
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:max="100"
                    android:progress="0"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prog_tidur"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_marginLeft="18dp"
                    android:gravity="left">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidur"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_normal"
                        android:textSize="14dp"
                        android:layout_marginRight="4dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_tidur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 "
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_normal"
                            android:textSize="14dp"/>
                        <TextView
                            android:id="@+id/txt_target_tidur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/ ~"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/roboto_normal"
                            android:textSize="14dp"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_forward"
                    android:scaleType="fitXY"
                    android:layout_gravity="right"
                    app:tint="@color/black"/>

            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>