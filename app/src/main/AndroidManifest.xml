<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soopconcept.bugarrr">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_ALARM"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ForgetAct"></activity>
        <activity android:name=".activity.PengaturanAct" />
        <activity android:name=".activity.EditProfileAct" />
        <activity android:name=".activity.DetailTidurAct" />
        <activity android:name=".activity.DetailGerakAct" />
        <activity android:name=".activity.DetailOlahragaAct" />
        <activity android:name=".activity.DetailKaloriAct" />
        <activity
            android:name=".activity.DetailTipsAct"
            android:fitsSystemWindows="true"
            android:theme="@style/Fullscreen" />
        <activity android:name=".activity.RiwayatActivitasAct" />
        <activity android:name=".activity.FinishRegisterAct" />
        <activity android:name=".activity.TargetAct" />
        <activity
            android:name=".activity.HomeAct"
            android:label="@string/title_activity_home" />
        <activity android:name=".activity.PersonalInfoAct" />
        <activity android:name=".activity.RegisterAct" />
        <activity android:name=".activity.LoginAct" />
        <activity
            android:name=".activity.GetStartedAct"
            android:fitsSystemWindows="true"
            android:theme="@style/Fullscreen" />
        <activity android:name=".activity.SplashAct">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".utils.NotificationReceiver"/>
    </application>

</manifest>